{% extends 'base.html.twig' %}

{% block title %}Casino index{% endblock %}
{% block body %}

    <h1>Casino index</h1>
    {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit">Search</button>
    {{ form_end(form) }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Adress</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casino in casinos %}
            <tr>
                <td>{{ casino.id }}</td>
                <td>{{ casino.name }}</td>
                <td>{{ casino.brand }}</td>
                <td>{{ casino.adress }}</td>
                <td>{{ casino.description }}</td>
                <td>
                    <a href="{{ path('casino_show', {'id': casino.id}) }}">show</a>
                    <a href="{{ path('casino_edit', {'id': casino.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('casino_new') }}">Create new</a>
{% endblock %}
